<div class="container">
<div class="payment-wrapper">

  <div class="payment">
    <div class="images-payment">
      <img src=" <%= @tool.photo_url %>" alt="image" width="175px">
    </div>
    <div class="payment-container">
      <h4> <%= @tool.name %> </h4>
      <h5>Sku: <%= @order.tool_sku %></h5>
      <h5> Cantidad: 1</h5>
      <h5> <%= @order.user_id %></h5>
    </div>
    <div class="payment-order">
      <%= form_tag order_payments_path(@order) do %>
        <article>
          <label class="amount">
            <span>Amount: <%= humanized_money_with_symbol(@order.amount) %></span>
          </label>
        </article>
        <script src="https://checkout.stripe.com/checkout.js" class="stripe-button"
        data-key="<%= Rails.configuration.stripe[:publishable_key] %>"
        data-name="Mi herramienta"
        data-email="<%= current_user.email %>"
        data-description="Herramienta <%= @order.tool_sku %>"
        data-amount="<%= @order.amount_cents %>"
        data-currency="<%= @order.amount.currency %>"></script>
      <% end %>
    </div>
  </div>
</div>
</div>
