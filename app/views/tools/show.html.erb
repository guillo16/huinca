<div class="container">
  <div class="row">
    <div class="col-sm-12">
      <h1><%= @tool.name %></h1>
    </div>
  </div>
  <div class="row">
    <div class="col-sm-12 col-md-6">
      <%= image_tag(@tool.photo_url, width: '100%') %>
    </div>
    <div class="col-sm-12 col-md-6">
      <p>Some awesome description of our amazing tool.</p>
      <p>Amount: <%= humanized_money_with_symbol(@tool.price) %></p>

    </div>
  </div>
</div>
